<div class="container">
  <div class="row justify-content-center">
    <div class="col-4 mb-5">
      <h1 class="mt-5 mb-4"><%= Spree.t(:editing_wishlist) %></h1>
      <%= form_for @wishlist do |f| %>
        <p><%= f.label :name, Spree.t(:name) %>:&nbsp;<%= f.text_field :name, class: 'form-control' %></p>
        <p><%= f.check_box :is_private %>&nbsp;<%= f.label :is_private, Spree.t(:is_private) %></p>
        <p><%= f.check_box :is_default %>&nbsp;<%= f.label :is_default, Spree.t(:is_default) %></p>
        <%= f.submit Spree.t(:update), class: 'btn btn-success' %>
        <%= Spree.t(:or) %>
        <%= link_to Spree.t(:delete_wishlist), @wishlist, method: :delete, data: { confirm: Spree.t(:are_you_sure_wishlist) }, class: 'btn btn-danger' %>
      <% end -%>
    </div>
  </div>
</div>
